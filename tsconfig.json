{
    "compilerOptions": {
        "module": "ES2020",
        "sourceMap": true,
        "outDir": "./dist",
        "declaration": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": ["./src/**/*.ts", "./src/*.ts",
    ]
}